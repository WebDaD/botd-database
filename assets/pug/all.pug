doctype html
html
  include includes/header.pug
  title Alle Segenssprüche
  body
    include includes/share.pug
    .container
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            a.navbar-brand(href='#')
              img(alt='Brand', src='images/apple-touch-icon.png', style='width:72px;')
              span.title Alle Segenssprüche
      h1 Alle Segenssprüche
      each blessing in blessings
        blockquote
          p.blessing !{blessing.text}
          cite #{blessing.source}
        hr
    include includes/footer.pug