doctype html
html
  include includes/header.pug
  body
    include includes/share.pug
    .container
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            a.navbar-brand(href='#')
              img(alt='Brand', src='images/apple-touch-icon.png', style='width:72px;')
              span.title Segen des Tages #{day}
      h1 #{day}
      blockquote
        p.blessing #{blessing}
        cite #{source}
      a.btn(href="/#{prev}")
        i.fa.fa-chevron-left(aria-hidden='true')
        span #{niceprev}
      a.btn.pull-right(href="/#{next}")
        span #{nicenext}
        i.fa.fa-chevron-right(aria-hidden='true')
    include includes/footer.pug